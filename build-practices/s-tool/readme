
: build

podman build -t "$(basename "$PWD")" -f Dockerfile -- .


: list tools

podman run --rm -- s-tool

: show define of tool dateinner

podman run --rm -- s-tool declare -f dateinner

: use

cat | podman run --rm -i -- s-tool proptools t XXX=xxx ...
cat | podman run --rm -i -- s-tool proptools t XXX=xxx ... | podman run --rm -i -- s-tool proptools d -D " "
cat | podman run --rm -i -- s-tool proptools d -D " " | podman run --rm -i -- s-tool proptools t XXX=xxx ...


: install-out once

eval "$(podman run --rm -- s-tool cat src.sh)"


: use if install-outed

cat | (proptools t XXX=xxx ...)
cat | (proptools t XXX=xxx ...) | (proptools d -D " "
cat | (proptools d -D " ") | (proptools t XXX=xxx ...)

: todo

normal install:
proptools ()
{
    podman run --rm -i -- s-tool proptools "$@" ;
} ;

installer ()
{
    echo "$@" | xargs -n1 | xargs -I {F} -- echo '
        {F} ()
        {
            podman run --rm -i -- s-tool {F} "$@" ;
        } ' ;
}


